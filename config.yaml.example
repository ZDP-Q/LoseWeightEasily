# LossWeightEasily 配置文件示例
# 
# 使用说明：
# 1. 复制此文件为 config.yaml
# 2. 填写你的配置信息
# 3. 重启应用
#
# 配置优先级：环境变量 > config.yaml > 默认值

# LLM API 配置（用于食谱规划功能）
llm:
  # API Key（必需）
  # 支持 OpenAI、DeepSeek、智谱 AI、通义千问等兼容服务
  api_key: ""
  
  # API 基础地址（可选）
  # OpenAI: https://api.openai.com/v1
  # DeepSeek: https://api.deepseek.com/v1
  # 智谱 AI: https://open.bigmodel.cn/api/paas/v4
  # 通义千问: https://dashscope.aliyuncs.com/compatible-mode/v1
  base_url: "https://api.openai.com/v1"
  
  # 模型名称（可选）
  # OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo
  # DeepSeek: deepseek-chat
  # 智谱 AI: glm-4, glm-4-flash
  # 通义千问: qwen-turbo, qwen-plus, qwen-max
  model: "gpt-3.5-turbo"

# 数据库配置
database:
  # 数据库文件路径
  path: "food_data.db"

# FAISS 索引配置
index:
  # 索引文件路径
  file: "food_index.faiss"
  # 元数据文件路径
  metadata: "food_metadata.pkl"

# 搜索配置
search:
  # 默认搜索结果数量
  limit: 10
  # 相似度阈值（0-1）
  threshold: 0.3

# 嵌入模型配置
embedding:
  # Sentence Transformers 模型名称
  # 支持中英文的多语言模型
  model: "paraphrase-multilingual-MiniLM-L12-v2"

# 日志配置
logging:
  # 日志模式
  # dev: 开发模式，输出详细的调试信息
  # release: 生产模式，仅输出重要信息
  mode: "dev"
  
  # 日志级别
  # DEBUG: 调试信息（仅开发模式）
  # INFO: 一般运行信息
  # WARNING: 警告信息
  # ERROR: 错误信息
  # CRITICAL: 严重错误
  level: "DEBUG"
  
  # 日志文件目录
  dir: "logs"
  
  # 是否启用控制台输出
  enable_console: true
  
  # 是否启用文件日志
  enable_file: true
